<div id="<%= dom_id recipe %>" class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <% if recipe.image.attached? %>
        <%= image_tag recipe.image, class: "img-fluid rounded-start img-thumbnail", alt: recipe.name %>
      <% end %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to recipe.name, recipe %>
        </h5>
        <p class="card-text">
          <%= recipe.description %>
        </p>
      </div>
    </div>
  </div>
</div>
