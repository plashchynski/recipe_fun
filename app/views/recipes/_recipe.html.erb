<%= link_to recipe do %>
  <div id="<%= dom_id recipe %>" class="card mb-3 rounded-4 overflow-hidden mb-4">
    <div class="row">
      <div class="col-md-4">
        <% if recipe.image.attached? %>
          <%= image_tag recipe.image, class: "img-fluid", alt: recipe.title %>
        <% end %>
      </div>

      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">
            <%= recipe.title %>
          </h5>
          <p class="card-text">
            <%= recipe.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
